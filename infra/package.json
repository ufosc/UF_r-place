{
  "name": "infra",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -w -p tsconfig.json",
    "cdk": "node ./scripts/run-cdk.js",
    "cdk:bootstrap": "npm run build && node ./scripts/run-cdk.js bootstrap",
    "cdk:bootstrap:env": "npm run build && node ./scripts/run-cdk.js bootstrap aws://$CDK_ACCOUNT/$CDK_REGION",
    "cdk:bootstrap:auto": "npm run build && node ./scripts/run-cdk.js bootstrap",
    "synth": "npm run build && node ./scripts/run-cdk.js synth",
    "deploy": "npm run build && node ./scripts/run-cdk.js deploy --require-approval never",
    "destroy": "node ./scripts/run-cdk.js destroy"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.152.0",
    "constructs": "^10.3.0",
    "dotenv": "^16.6.1",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.137",
    "@types/node": "^20.12.12",
    "aws-cdk": "^2.152.0",
    "esbuild": "^0.21.5",
    "typescript": "^5.4.5"
  }
}
